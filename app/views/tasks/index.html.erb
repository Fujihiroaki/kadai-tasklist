<h1>メッセージ一覧</h1>
<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h3>ログインをすると課題リストが見られます！</h3>
      <h3>↓Signupはこちら↓</h3>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>

<% if @tasks.any? %>
    <table class='table table-spriped'>
        <thead>
            <tr>
                <th>id</th>
                <th>タスク内容</th>
                <th>ステータス</th>
            </tr>
        </thead>
        <tbody>
            <% @tasks.each do |task| %>
                <tr>
                    <th><%= link_to task.id, task %></th>
                    <th><%= task.content %></th>
                    <th><%= task.status %></th>
                </tr>
            <% end %>
        </tbody>
    </table>
    <div>
        <%= paginate @tasks %>
    </div>
<% end %>