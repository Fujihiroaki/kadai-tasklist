<h1>メッセージ一覧</h1>

<% if @tasks.any? %>
    <table class='table table-spriped'>
        <thead>
            <tr>
                <th>id</th>
                <th>タスク内容</th>
                <th>ステータス</th>
            </tr>
        </thead>
        <tbody>
            <% @tasks.each do |task| %>
                <tr>
                    <th><%= link_to task.id, task %></th>
                    <th><%= task.content %></th>
                    <th><%= task.status %></th>
                </tr>
            <% end %>
        </tbody>
    </table>
    <div>
        <%= paginate @tasks %>
    </div>
<% end %>